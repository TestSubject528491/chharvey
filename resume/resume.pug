    style.
      @media print {
        #obj2 {
          margin-top: -3rem;
        }
      }
      #obj2,
      #obj3 {display: none;}
      #obj3 {
        width: 100%;
        border: 0; /* reset */
        font-size: inherit; /* reset */
        background: transparent; /* reset */
      }
  body
    main.o-Grid.o-Grid--resume(itemscope="" itemtype="http://schema.org/Person")
      mixin experience(title, data)
        section.o-Grid__Item.o-Grid__Item--exp&attributes(attributes)
          h2.o-Grid__Item.c-ExpHn!= title
          block
          != data.map((item) => item.view()).join('')
      mixin achievement(title, data, classes)
        section.o-Grid__Item.o-Grid__Item--exp&attributes(attributes)
          h2.o-Grid__Item.c-ExpHn!= title
          dl.o-Grid__Item.o-Grid__Item--maincol.o-ListAchv(class=classes)
            != data.map((item) => item.view()).join('')
      header.o-Grid__Item--maincol.h-Hr
        h1.c-ResHn(itemprop="name")
          span(itemprop="givenName") Christopher
          = ' '
          abbr(title="Hewitt" itemprop="additionalName") H.
          = ' '
          span(itemprop="familyName") Harvey
        section
          h2.h-Hidden Contact
          -
            let contact_opts = { attributes: {
              list : { class: 'o-List o-Flex-sK c-Contact' },
              value: { class: 'o-List__Item o-Flex__Item-sK c-Contact__Item' },
            } }
          address!= Element.data(Resume.CONTACT_DATA.map((item) => Resume.view(item).contactItem()), contact_opts)
      section.o-Grid__Item.o-Grid__Item--exp#objective
        h2.o-Grid__Item.c-ExpHn Objective
        p.o-Grid__Item--maincol#obj1(itemprop="seeks") To obtain an entry-level position as a front-end web developer.
        //- p#obj2 To obtain an entry-level position in the Intelligence Community that would utilize my mathematical and technological skills.
        //- input#obj3(type="text" value="Type a custom objective here. Reload to reset.")
      section.o-Grid__Item.o-Grid__Item--exp#skills
        h2.o-Grid__Item.c-ExpHn Skills
        -
          let skills_all = [].concat(...[
            Resume.SKILLS.content,
            Resume.SKILLS.design,
            Resume.SKILLS.programming,
            Resume.SKILLS.data,
            Resume.SKILLS.technical,
            // Resume.SKILLS.apps,
          ])
        -
          let skill_print_opts = { attributes: {
            list : { class: 'o-List c-SkillsListPrint' },
            value: { class: 'o-List__Item h-Inline' },
          } }
        != Element.data(skills_all.map((sk) => sk.text), skill_print_opts)
        div.o-Grid__Item.o-Grid__Item--maincol.o-Grid.o-Grid--skillGroups
          mixin skillCategory(title, data)
            section.o-Grid__Item.c-Position&attributes(attributes)
              h3.c-Position__Name= title
              dl.o-Grid.o-Grid--skill!= data.map((item) => item.view()).join('')
          +skillCategory('Content', Resume.SKILLS.content)#skills-content
          +skillCategory('Design', Resume.SKILLS.design)#skills-design
          +skillCategory('Programming', Resume.SKILLS.programming)#skills-programming
          +skillCategory('Data', Resume.SKILLS.data)#skills-data
          +skillCategory('Technical Skills', Resume.SKILLS.technical)#skills-tech
          +skillCategory('Software Applications', Resume.SKILLS.apps)#skills-apps
      +experience('Technical Experience', Resume.POSITIONS.technical)#tech-exp
      +experience('Teaching Experience', Resume.POSITIONS.teaching)#teach-exp
      +experience('Other Work Experience', Resume.POSITIONS.other)#work-exp
      section.o-Grid__Item.o-Grid__Item--exp#edu
        h2.o-Grid__Item.c-ExpHn Education
        section.o-Grid__Item.o-Grid__Item--maincol.c-Position.-d-x.-xd-c#VT
          h3.c-Position__Org.-xo-1.-mb-1.-fv-u(itemprop="alumniOf" itemscope="" itemtype="http://schema.org/CollegeOrUniversity")
            a.c-Camo(rel="external" href="https://www.vt.edu/" itemprop="url")
              span(itemprop="name") Virginia Polytechnic Institute and State University
          dl.o-ListAchv.-mb-z
            != Resume.DEGREES.map((item) => item.view()).join('')
      +achievement('Profes&shy;sional Dev&shy;elopment', Resume.PRODEVS)#prof-dev
      +achievement('Awards &amp; Member&shy;ships', Resume.AWARDS)#awards
      +achievement('Team Athletic Experience', Resume.TEAMS, 'h-Hr')#athletic
      footer.o-Grid__Item.o-Grid__Item--maincol.-fz-el-mill: p.
        This r&eacute;sum&eacute; is 100% hand-written, by me! Check out the
        #[a(rel="external" href="https://github.com/chharvey/chharvey.github.io/blob/master/resume/resume.jade") source code]
        at GitHub.
