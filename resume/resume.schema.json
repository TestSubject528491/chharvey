{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://chharvey.github.io/resume/resume.schema.json",
  "title": "Resume",
  "type": "object",
  "description": "Resume of Christopher H. Harvey of Fairfax, VA.",
  "definitions": {},
  "required": ["contact"],
  "additionalProperties": false,
  "properties": {
    "contact": {
      "type": "array",
      "description": "Contact data for this resume.",
      "items": {
        "type": "object",
        "required": ["url", "octicon", "content"],
        "additionalProperties": false,
        "properties": {
          "url"     : { "type": "string", "description": "url of the link" },
          "octicon" : { "type": "string", "description": "octicon CSS class of the icon" },
          "itemprop": { "type": "string", "description": "itemprop Microdata of the contact point" },
          "content" : { "type": "string", "description": "text content of the link" }
        }
      }
    },
    "skills": {
      "type": "object",
      "description": "List of skills, grouped by category.",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["level", "text"],
          "additionalProperties": false,
          "properties": {
            "level": { "type": "integer", "minimum": 1, "maximum": 5, "description": "proficiency with this skill; must be `1`–`Skill.LEVELS.length`" },
            "text" : { "type": "string", "description": "custom HTML string defining this skill" }
          }
        }
      }
    },
    "positions": {
      "type": "object",
      "description": "List of positions, grouped by category.",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "id",
            "title",
            "orgname",
            "url",
            "start",
            "city",
            "state",
            "geo",
            "descriptions"
          ],
          "additionalProperties": false,
          "properties": {
            "id"      : { "type": "string", "description": "the id of this job position" },
            "title"   : { "type": "string", "description": "the official position name" },
            "orgname" : { "type": "string", "description": "the name of the organization; may be HTML" },
            "url"     : { "type": "string", "description": "the url of the organization’s homepage" },
            "itemtype": { "type": "string", "description": "the value of the organization’s `itemtype` attribute" },
            "start"   : { "type": "string", "description": "the start date in ISO format" },
            "end"     : { "type": "string", "description": "the end date in ISO format (leave undefined if there is no end date)" },
            "city"    : { "type": "string", "description": "the city/town/locality name" },
            "state"   : { "type": "string", "description": "the state/province/region postal code (e.g. 'NY', 'CA')" },
            "geo"     : {
              "type": "array",
              "description": "the geo-coordinates",
              "items": [
                { "type": "number", "description": "the latitude value of the location" },
                { "type": "number", "description": "the longitude value of the location" }
              ]
            },
            "descriptions": {
              "type": "array",
              "description": "the list of descriptions for the job position",
              "items": {
                "type": ["string", "array"],
                "description": "a single description item, or an array of strings to be joined to form such an item",
                "items": { "type": "string" }
              }
            },
            "descriptions_hidden": { "$ref": "#/properties/positions/additionalProperties/items/properties/descriptions" }
          }
        }
      }
    },
    "degrees": {
      "type": "array",
      "description": "List of degrees.",
      "items": {
        "type": "object",
        "required": ["gpa", "field"],
        "additionalProperties": false,
        "properties": {
          "year" : { "type": "integer", "description": "year the degree was earned. if not yet earned, a negative integer" },
          "gpa"  : { "type": "number", "minimum": 0, "maximum": 4, "description": "grade-point-average" },
          "field": { "type": "string", "description": "type and field of the degree" }
        }
      }
    },
    "prodevs": {
      "type": "array",
      "description": "List of professional development hours.",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "title": "ProDev",
            "required": [
              "prodev",
              "pdh",
              "start",
              "end",
              "city",
              "state",
              "geo",
              "coursename"
            ],
            "additionalProperties": false,
            "properties": {
              "prodev"  : { "type": "boolean", "description": "this item is an instance of ProDev", "const": true },
              "pdh"     : { "type": "number", "description": "the number of professional development hours" },
              "itemtype": { "type": "string", "description": "the value of the event’s `itemtype` attribute" },
              "start"   : { "type": "string", "description": "the start date in ISO format" },
              "end"     : { "type": "string", "description": "the end date in ISO format" },
              "city"    : { "type": "string", "description": "the city/town/locality name" },
              "state"   : { "type": "string", "description": "the state/province/region postal code (e.g. 'NY', 'CA')" },
              "geo"     : {
                "type": "array",
                "description": "the geo-coordinates",
                "items": [
                  { "type": "number", "description": "the latitude value of the location" },
                  { "type": "number", "description": "the longitude value of the location" }
                ]
              },
              "coursename": {
                "type": ["string", "array"],
                "description": "the title of the course or event",
                "items": { "type": "string" }
              }
            }
          },
          {
            "type": "object",
            "title": "Award",
            "required": ["dates", "text"],
            "additionalProperties": false,
            "properties": {
              "prodev": { "type": "boolean", "description": "this item is not an instance of ProDev", "const": false },
              "dates" : { "type": "string", "description": "date(s) relevant to the award" },
              "text"  : { "type": ["string", "array"], "description": "custom HTML string defining the award", "items": { "type": "string" } }
            }
          }
        ]
      }
    },
    "awards": {
      "type": "array",
      "description": "List of other awards & memberships.",
      "items": {
        "type": "object",
        "required": ["dates", "text"],
        "additionalProperties": false,
        "properties": {
          "dates"     : { "type": "string", "description": "date(s) relevant to the award" },
          "text"      : { "type": "string", "description": "custom HTML string defining the award" },
          "sub_awards": {
            "type": "array",
            "description": "any sub-awards within this award",
            "items": {
              "type": "object",
              "required": ["dates", "text"],
              "additionalProperties": false,
              "properties": {
                "dates": { "type": "string", "description": "date(s) relevant to the award" },
                "text" : { "type": "string", "description": "custom HTML string defining this award" }
              }
            }
          }
        }
      }
    },
    "teams": {
      "type": "array",
      "description": "List of athletic team memberships.",
      "items": {
        "type": "object",
        "required": ["dates", "text"],
        "additionalProperties": false,
        "properties": {
          "dates": {
            "type": "string",
            "description": "date(s) relevant to the award"
          },
          "text": {
            "type": "array",
            "description": "custom HTML string defining this award",
            "items": { "type": "string" }
          },
          "sub_awards": {
            "type": "array",
            "description": "any sub-awards within this award",
            "items": {
              "type": "object",
              "required": ["dates", "text"],
              "additionalProperties": false,
              "properties": {
                "dates": { "type": "string", "description": "date(s) relevant to the award" },
                "text" : { "type": "string", "description": "custom HTML string defining this award" }
              }
            }
          }
        }
      }
    }
  }
}
